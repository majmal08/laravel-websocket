<?xml version="1.0"?>
<ruleset name="LaravelProject">
    <description>PHP CodeSniffer rules for Laravel project</description>
    <arg name="extensions" value="php"/>
    <file>.</file> <!-- Set the directory to analyze -->
    <arg name="colors"/>
    <arg name="parallel" value="80"/> <!-- Adjust according to your system's CPU -->
    <arg name="basepath" value="."/>
    <arg name="severity" value="10"/> <!-- Set severity level (0-10) -->
    <arg name="extensions" value="php"/>
    <arg name="warning-severity" value="1"/>
    <arg name="error-severity" value="1"/>
    <rule ref="PSR12"/> <!-- Use PSR-12 standard -->
    <!-- <exclude-pattern>*/vendor/*</exclude-pattern> -->
    <!-- Exclude vendor directory -->
</ruleset>
